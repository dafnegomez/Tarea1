package ejercicio6;

import java.util.Scanner;
public class EJERCICIO6 {

    public static void main (String args[])
 
    { 
        int dato;
        Scanner leer=new Scanner(System.in);
        System.out.println("Nivel del TRIANGULO");
 
        dato=leer.nextInt();
        for (int i=1;i<=dato;i++)
        { 
            for(int j=1;j<i+1;j++)
            { 
                System.out.print("*");
            }
            System.out.println("\n");
        }
    }
}
